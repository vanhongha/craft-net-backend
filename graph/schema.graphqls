type User {
  id: String!
  username: String!
}

type Account {
  username: String!
  passwordHash: String!
}

type AuthPayload {
  accessToken: String!
  reloadToken: String!
  user: User!
}

input RegisterInput {
  username: String!
  password: String!
}

input LoginInput {
  username: String!
  password: String!
}

type Query {
  users: [User!]!
}

type Mutation {
  register(input: RegisterInput!): User!
  login(input: LoginInput!): AuthPayload!
}